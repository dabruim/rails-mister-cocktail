<div class=container>
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description%> <%= dose.ingredient.name%></li>
    <% end %>
  </ul>

  <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
   <p><%= link_to 'Cocktail list', cocktails_path %></p>

</div>
